

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <style>
        .centered-title {
            text-align: center;
        }
    </style>
    <style>
        .centered-table {
            margin: 0 auto; /* This centers the element horizontally */
        }
    </style>
</head>
<body>
    <h1 class="centered-title" > List of Books </h1>
 
    
    <table class="centered-table" border="1">
        <tr>
            <th>ref</th>
            <th>Title</th>
            <th>AuteurName</th>
            <th>Category</th>
            <th>Published</th>
            <th>Published Date </th>
                        <th>Actions</th>
                        

        </tr>
        {% for b in maliste %}
        <tr>
        <td>{{b.ref | upper}}</td>
        <td>{{b.Title}}</td>
        <td>{{b.IdAuthor.username}}</td>
        <td>{{b.category}}</td>
        <td>{{b.published ? 'Yes' : 'No' }}</td>
        <td>{{b.publicationDate|date('Y-m-d H:i:s')}}</td>
        <td><a href="{{ path('edit_book', {'ref': b.ref}) }}">Edit</a></td> <!-- Lien "edit" -->
        <td><a href="{{ path('delete_book', {'ref': b.ref}) }}" onclick="return confirm('Are you sure you want to delete this book?')">
        Delete</a></td> <!-- Lien "delete" -->
        <td><a href="{{ path('show_book', {'ref': b.ref}) }}">Show</a></td> 
    

        </tr>
        {% else %}
        <h1>Tableau Vide</h1>
        {% endfor %}   
    </table>

</body>
</html>